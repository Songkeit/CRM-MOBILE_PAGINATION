<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_margin="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:id="@+id/displayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display name"
            android:textStyle="bold|normal"
            android:textColor="@color/purple_200"
            android:textSize="15dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"

            >
            <TextView
                android:id="@+id/video_phone_defaule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เบอร์ Video Phone:"
                android:textColor="@color/purple_200"
                android:textSize="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold|normal"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/video_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="extension"
                android:textColor="@color/purple_200"
                android:textSize="15dp"
                android:textStyle="bold|normal"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/copy_video_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_content_copy_24"
                android:layout_marginLeft="10dp"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"

            >
            <TextView
                android:id="@+id/number_phone_defaule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เบอร์โทรศัพท์:"
                android:textColor="@color/purple_200"
                android:textSize="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold|normal"
                android:layout_gravity="center"

                />
            <TextView
                android:id="@+id/number_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone number:"
                android:textColor="@color/purple_200"
                android:textSize="15dp"
                android:textStyle="bold|normal"
                android:layout_gravity="center"

                />
            <ImageView
                android:id="@+id/copy_number_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_content_copy_24"
                android:layout_marginLeft="10dp"

                />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>