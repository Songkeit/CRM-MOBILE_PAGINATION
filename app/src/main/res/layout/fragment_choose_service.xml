<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingTop="60dp"
            android:background="@drawable/bg_header"
            android:gravity="center"
            android:padding="50dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เลือกบริการ"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold|normal"

                />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_vrs"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="110dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="true"
            android:shadowRadius="50"
            app:cardCornerRadius="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="VRS"
                    android:textStyle="bold|normal"
                    android:textSize="20dp"
                    android:padding="10dp"

                    android:drawableBottom="@drawable/circular_my_icon"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="เลือกหทายเลขที่นั่ง :"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#2587be"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/select_service_vrs"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:hint="items"
                        android:padding="10dp"
                        android:inputType="none"
                        android:layout_margin="10dp"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_srv_vrs"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:padding="5dp"
                    android:backgroundTint="#2587be"
                    android:text="เลือก"
                    />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_caption"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="30dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="true"
            android:shadowRadius="50"
            app:cardCornerRadius="20dp"
            android:layout_below="@id/card_vrs"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="CAPTION"
                    android:textStyle="bold|normal"
                    android:textSize="20dp"
                    android:padding="10dp"

                    android:drawableBottom="@drawable/circular_my_icon"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="เลือกหทายเลขที่นั่ง :"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#2587be"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/select_service_caption"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:hint="items"
                        android:padding="10dp"
                        android:inputType="none"
                        android:layout_margin="10dp"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_srv_cap"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:padding="5dp"
                    android:backgroundTint="#2587be"
                    android:text="เลือก"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>